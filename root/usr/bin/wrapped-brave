#!/bin/bash

BIN=/usr/bin/brave-browser-beta

# Cleanup
if ! pgrep -f brave-browser-beta > /dev/null;then
  rm -f $HOME/.config/BraveSoftware/Brave-Browser-Beta/Singleton*
fi

# Run normally on privved containers or modified un non priv
if grep -q 'Seccomp:.0' /proc/1/status; then
  ${BIN} \
  --ignore-gpu-blocklist \
  --no-first-run \
  --password-store=basic \
  --simulate-outdated-no-au='Tue, 31 Dec 2099 23:59:59 GMT' \
  --start-maximized \
  --user-data-dir \
   "$@" > /dev/null 2>&1
else
  ${BIN} \
  --ignore-gpu-blocklist \
  --no-first-run \
  --no-sandbox \
  --password-store=basic \
  --simulate-outdated-no-au='Tue, 31 Dec 2099 23:59:59 GMT' \
  --start-maximized \
  --test-type \
  --user-data-dir \
   "$@" > /dev/null 2>&1
fi